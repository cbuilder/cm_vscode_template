  "version": "0.2.0",
  "configurations": [
    {
        "name": "GDB",
        "type": "gdb",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "target": "${workspaceRoot}/build/lab1.elf", 
        "gdbpath" : "arm-none-eabi-gdb.exe",
        "autorun": [
          "set remotetimeout 60",
          "target remote localhost:3333",
          "symbol-file build/lab1.elf",
          "mon halt",
          "mon halt",
          "mon halt",
          "mon halt",
          "load",
          "mon reset init",
          ]
    },
